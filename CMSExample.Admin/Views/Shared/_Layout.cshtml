<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Product Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        #sidebar {
            background-color: #343a40; 
            color: #fff; 
            min-height: 100vh;
        }

            #sidebar .nav-link {
                color: #adb5bd; 
            }

                #sidebar .nav-link.active,
                #sidebar .nav-link:hover {
                    color: #ffffff; 
                    background-color: #495057; 
                }

            #sidebar .nav-link {
                padding: 1rem; 
            }

        #logo {
            display: block;
            margin: 1rem auto; 
            max-width: 150px;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block">
                <div class="position-sticky">
                    <a href="@Url.Action("Index", "Home")">
                        <img id="logo" src="~/lib/28267842_7.jpg" alt="Logo" />
                    </a>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link aria-current="page" href="@Url.Action("Index", "Home")">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  aria-current="page" href="@Url.Action("Index", "Product")">
                                Product
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link aria-current="page" href="@Url.Action("Index", "Article")">
                                Article
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
